<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_row"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="5dp"
    android:layoutDirection="rtl"
    cardview:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:src="@drawable/report2"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serviceproivdertitle"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableRight="@drawable/bluecircle"
                android:gravity="right"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:text="الاسم"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#32A5B4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="التفاصيل"
                android:gravity="right"
                android:drawableRight="@drawable/bluecircle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#32A5B4"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="إضافة التحاليل +  "
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_row"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>