    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_row"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        cardview:cardCornerRadius="2dp"
        cardview:cardElevation="3dp"
        android:layoutDirection="rtl"
        android:layout_marginTop="50dp"
        cardview:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#32A5B4"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageAllUser"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/doc5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/prescreptionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/serviceproivdertitle"
                    android:maxLines="1"
                    android:gravity="right"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:hint="الدكتور احمد الجعلى"
                    android:textColorHint="#fff"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="#fff"
                    android:layout_marginRight="15dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/prescreptiondate"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/serviceproivdertitle"
                    android:maxLines="1"
                    android:layout_marginStart="30dp"
                    android:gravity="right"
                    android:hint="تخصص مخ و أعصاب"
                    android:textColorHint="#fff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="#fff"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/newReq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/doctor2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/doctor2" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newRequest"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/oldReq"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/doctor3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/doctor3" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oldRequest"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
