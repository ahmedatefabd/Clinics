<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#32A5B4"
    android:layoutDirection="rtl"
    tools:context=".x_Ray.X_RayActivity">

    <include
        android:id="@+id/message_Toolbar"
        layout="@layout/app_bar_layout_xray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/xray11"
            android:backgroundTint="#32A5B4"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="#32A5B4"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addpicture"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="إضافة اشعه "
            android:textColor="#000"
            android:padding="4dp"
            android:background="@drawable/background_row"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بحد أقصى 5 صور"
            android:textColor="#fff"
            android:textSize="18sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/show_selected_photo"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        >
    </LinearLayout>

</LinearLayout>