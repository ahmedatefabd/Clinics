<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.DetailsClinicFragment"
    android:orientation="vertical"
    android:background="#32A5B4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/doctor" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#12FFFFFF"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="الدكتور احمد الجعلى"
            android:textColorHint="#0D6472"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/user"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:maxLines="1"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:textColor="#0D6472"
            android:textDirection="rtl" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="تخصص مخ و أعصاب"
            android:textColorHint="#0D6472"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:phoneNumber="true"
            android:maxLines="1"
            android:layout_marginBottom="20dp"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="#0D6472"
            android:textDirection="rtl"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/newReq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/doctor2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/doctor2" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newRequest"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/oldReq"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/doctor3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/doctor3" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oldRequest"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>