<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_row"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="5dp"
    android:layoutDirection="rtl"
    cardview:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAllUser"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:src="@drawable/aa"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/Name_SheetXRays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serviceproivdertitle"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableRight="@drawable/bluecircle"
                android:gravity="right"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:text="الاسم"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#32A5B4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/Time_SheetXRays"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="gjhbhbhbh"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#32A5B4"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                android:drawableRight="@drawable/clock"
                />
            <TextView
                android:id="@+id/Date_SheetXRays"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serviceproivdertitle"
                android:maxLines="1"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="dd-mm-yyyy"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#32A5B4"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/date"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>